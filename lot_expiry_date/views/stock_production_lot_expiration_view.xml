<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="search_product_lot_expiration_filter" model="ir.ui.view">
            <field name="name">stock.production.lot.expiration.filter</field>
            <field name="model">stock.production.lot</field>
		    <field name="inherit_id" ref="stock.search_product_lot_filter"/>
            <field name="arch" type="xml">
                <field name="date" position="after" >
    				<field name="expiration_date" />
   				</field>
            </field>
        </record>

		<record model="ir.ui.view" id="view_production_lot_form_expiration">
		    <field name="name">stock.production.lot.expiration.form</field>
		    <field name="model">stock.production.lot</field>
		    <field name="inherit_id" ref="stock.view_production_lot_form"/>
		    <field name="arch" type="xml">
                <field name="date" position="replace" >
                    <field name="date" />
    				<field name="expiration_date"  />
   				</field>
		    </field>
		</record>
  
	</data>
</openerp>


